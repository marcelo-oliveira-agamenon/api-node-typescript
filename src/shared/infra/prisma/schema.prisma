datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id  String  @default(uuid()) @id
  name String
  email String @unique
  password String
  avatar Json
  role Role
  gender String
  preferences String[]
  createdAt DateTime @default(now())
  modifiedAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}